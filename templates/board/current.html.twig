{% extends 'base.html.twig' %}

{% block title %}Current Board
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1>Current Board</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>HomeTeam</th>
					<th>AwayTeam</th>
					<th>HomeScore</th>
					<th>AwayScore</th>
			</thead>
			<tbody>
				{% for board in boards %}
					<tr>
						<td>{{ board.id }}</td>
						<td>{{ board.homeTeam }}</td>
						<td>{{ board.awayTeam }}</td>
						<td>{{ board.homeScore }}</td>
						<td>{{ board.awayScore }}</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="9">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
