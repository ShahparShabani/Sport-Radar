{% extends 'base.html.twig' %}

{% block title %}Board index
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1>Board index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>HomeTeam</th>
					<th>AwayTeam</th>
					<th>HomeScore</th>
					<th>AwayScore</th>
					<th>Finished</th>
					<th>CreatedAt</th>
					<th>UpdatedAt</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for board in boards %}
					<tr>
						<td>{{ board.id }}</td>
						<td>{{ board.homeTeam }}</td>
						<td>{{ board.awayTeam }}</td>
						<td>{{ board.homeScore }}</td>
						<td>{{ board.awayScore }}</td>
						<td>{{ board.finished ? 'Yes' : 'No' }}</td>
						<td>{{ board.createdAt ? board.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ board.updatedAt ? board.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>
							<a class="c-a-icon" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Show User" href="{{ path('board_details', {'id': board.id}) }}">
								<i class="fas fa-eye c-icon-eye" style="color:#FE0200;"></i>
							</a>
							<a class="c-a-icon" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Edit User" href="{{ path('board_edit', {'id': board.id}) }}">
								<i class="fas fa-pencil-alt" style="color:#01003C;"></i>
							</a>
							<a class="c-a-icon" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Delete User" href="{{ path('board_delete', {'id': board.id}) }}">
								<i class="fas fa-trash-alt" style="color:#FE0200;"></i>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="9">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_board_new') }}">Create new</a>
	</div>

{% endblock %}
