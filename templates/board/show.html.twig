{% extends 'base.html.twig' %}

{% block title %}Board
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1>Board</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ board.id }}</td>
				</tr>
				<tr>
					<th>HomeTeam</th>
					<td>{{ board.homeTeam }}</td>
				</tr>
				<tr>
					<th>AwayTeam</th>
					<td>{{ board.awayTeam }}</td>
				</tr>
				<tr>
					<th>HomeScore</th>
					<td>{{ board.homeScore }}</td>
				</tr>
				<tr>
					<th>AwayScore</th>
					<td>{{ board.awayScore }}</td>
				</tr>
				<tr>
					<th>Finished</th>
					<td>{{ board.finished ? 'Yes' : 'No' }}</td>
				</tr>
				<tr>
					<th>CreatedAt</th>
					<td>{{ board.createdAt ? board.createdAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>UpdatedAt</th>
					<td>{{ board.updatedAt ? board.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_board_index') }}">back to list</a>

		<a href="{{ path('board_edit', {'id': board.id}) }}">edit</a>

		{{ include('board/_delete_form.html.twig') }}</div>

{% endblock %}
